#include <iostream>
#include <fstream>
using namespace std;

class Fatura {
    public:
        int Numero;
        int Ano;
        float valor;
        float contribuinte;
};

void ficheiro( Fatura fatura1[], int& quantidadeAtual){
    
    string escolha;
    cout << "â™â­â™ Queres criar um ficheiro com todas as faturas registadas? â™â­â™" << endl;
    cout << "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•" << endl;
    cout << "Pressione 'Enter' para continuar âž¤" << endl;
    cin.ignore();
    getline(cin, escolha);
    ofstream ficheiro("Faturas.csv");
    if (ficheiro.is_open()) {
        ficheiro << "NÃºmero â”‡ Ano â”‡ Valor â”‡ Contribuinte" << endl;
        for (int x = 0; x < quantidadeAtual; x++) {
            ficheiro << fatura1[x].Numero << ",";  
            ficheiro << fatura1[x].Ano << ",";
            ficheiro << fatura1[x].valor << ",";
            ficheiro << fatura1[x].contribuinte;
            ficheiro << endl; 
        }
        ficheiro.close();
        system("clear");
        cout << "O ficheiro foi criado com sucesso! âœ”" << endl;
    }

} 

void criafatura(Fatura& fatura) {
    system("clear");
    cout << "A criar fatura..." << endl;
    
    cout << "Insira o Valor da fatura: ";
    cin >> fatura.valor;

    cout << "Insira o Numero da fatura: ";
    cin >> fatura.Numero;

    cout << "Insira o Ano da fatura: ";
    cin >> fatura.Ano;

    cout << "Insira o contribuinte: ";
    cin >> fatura.contribuinte;

    system("clear");
}

void mostrafatura(const Fatura& fatura) {
    system("clear");
    cout << "A(s) fatura(s) criada(s) Ã©(sÃ£o) os(as) seguinte(s):" << endl;
    cout << "Valor:" << fatura.valor << endl;
    cout << "Numero:" << fatura.Numero << endl;
    cout << "Ano:" << fatura.Ano << endl;
    cout << "Contribuinte:" << fatura.contribuinte << endl;
}

int main() {
    system("clear");
    Fatura fatura1;
    int quantidadeAtual = 0;
    Fatura max_Ficheiros[100];
    int escolha;

    

    do {
        
        cout << "â•“â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•–" << endl;
        cout << "â•‘            Menu             â•‘" << endl;
        cout << "â•™â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•œ" << endl;
        cout << "ðŸ âž£ Criar fatura" << endl;
