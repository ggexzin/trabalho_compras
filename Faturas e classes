        cout << "ðŸ‘ âž£ Criar ficheiro com todas as faturas" << endl;
        cout << "ðŸ’ âž£ Sair ðŸšª" << endl;
        
        cin >> escolha;
        
        switch (escolha) {
            case 1:
                system("clear");
                criafatura(fatura1);
                cout << "A fatura foi adicionada com sucesso!" << endl;
                break;
            case 2:
                system("clear");
                mostrafatura(fatura1);
                break;
            case 3:
                system("clear");
                ficheiro(max_Ficheiros, quantidadeAtual);
                break;
            case 4:
                cout << "A sair..." << endl;
                break;
            default:
                cout << "Escolha incorreta!" << endl;
                break;
        }
    } while (escolha != 4);

    return 0;
}
